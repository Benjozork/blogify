{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
//        "plugin:prettier/recommended",
        "plugin:cypress/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "semi": "error",
        "arrow-parens": ["error", "as-needed"],
        "max-len": ["error", { "code": 240 }],
        "comma-dangle": "off",
        "array-bracket-spacing": "error"
    }
}
